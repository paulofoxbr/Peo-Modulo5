@page "/certificados"
@layout MainLayout
@inject WebApiClient client;

<PageTitle>Lista de Certificados</PageTitle>

<MudText Typo="Typo.h1" Class="mb-4" Align="Align.Center">Lista de Certificados</MudText>
<MudDataGrid Items="@ListCertificados.Take(10)" Filterable="true">
    <Columns>
        <PropertyColumn Property="x => x.NumeroCertificado" Title="Certificado" />
        <PropertyColumn Property="x => x.Conteudo" Title="Conteúdo" />
        <PropertyColumn Property="x => x.DataEmissao" Title="Emissão" />
    </Columns>

    <PagerContent>
        <MudDataGridPager T="CertificadoAlunoResponse" />
    </PagerContent>

</MudDataGrid>

@code {
    private IEnumerable<CertificadoAlunoResponse> ListCertificados = new List<CertificadoAlunoResponse>();

    protected override async Task OnInitializedAsync()
    {
        ListCertificados = await client.GetV1AlunoCertificadosAsync();
    }
}